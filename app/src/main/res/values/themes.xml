<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PodzielSięKsiążką" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">#ffffff</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#db504a</item>
        <item name="colorSecondaryVariant">#db504a</item>
        <item name="colorOnSecondary">#ffffff</item>
        <item name="colorPrimary">#ffffff</item>
        <item name="backgroundColor">#ffffff</item>
        <item name="android:textColor">#121212</item>
        <item name="iconTint">#121212</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorOnPrimary</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="iconTheme">
        <item name="android:tint">#121212</item>
    </style>

    <style name="Theme.PodzielSięKsiążką.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ToolBarStyle" parent="Theme.AppCompat">
        <item name="android:textColorPrimary">#121212</item>
        <item name="android:textColorSecondary">#121212</item>
        <item name="actionMenuTextColor">#121212</item>
    </style>

    <style name="Theme.PodzielSięKsiążką.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.PodzielSięKsiążką.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
